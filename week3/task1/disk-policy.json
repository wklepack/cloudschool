{
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines/osDisk"
          },
          {
            "field": "name",
            "notLike": "*-disk####"
          }
        ]
      },
      "then": {
        "effect": "audit"
      }
    }
  }