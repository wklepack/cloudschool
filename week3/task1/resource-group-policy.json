{
        "mode": "all",        
        "displayName": "Allowed Resource Group names",
        "description": "This policy enables you to audit the name of the resource groups in your organization.",
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Resources/subscriptions/resourceGroups"
                    },
                    {
                        "field": "name",
                        "notLike": "*-test-rg"                
                    },
                    {
                        "field": "name",
                        "notLike": "*-qa-rg"                
                    },
                    {
                        "field": "name",
                        "notLike": "*-prod-rg"                
                    }
                ]
            },
            "then": {
                "effect": "audit"
            }
        }    
}